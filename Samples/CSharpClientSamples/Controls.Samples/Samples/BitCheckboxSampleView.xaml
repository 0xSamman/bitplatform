<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Bit.CSharpClient.Controls.Samples.BitCheckboxSampleView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:bit="clr-namespace:Bit.CSharpClient.Controls;assembly=Bit.CSharpClient.Controls"
    xmlns:viewModel="clr-namespace:Bit.CSharpClient.Controls.Samples">

    <ContentPage.BindingContext>
        <viewModel:BitCheckboxSampleViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <Style x:Key="ExtendedCheckboxUI" TargetType="bit:BitCheckbox">
            <Setter Property="FillColor" Value="LightPink" />
            <Setter Property="OutlineColor" Value="Red" />
            <Setter Property="CheckColor" Value="DeepPink" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CheckboxStates">
                        <VisualState x:Name="Checked" />
                        <VisualState x:Name="Unchecked">
                            <VisualState.Setters>
                                <Setter Property="FillColor" Value="HotPink" />
                                <Setter Property="CheckColor" Value="Transparent" />
                                <Setter Property="OutlineColor" Value="HotPink" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
            <Setter Property="ControlTemplate">
                <ControlTemplate>
                    <Grid BindingContext="{TemplateBinding}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <bit:BitFrame
                            Padding="0"
                            BackgroundColor="{Binding FillColor}"
                            BorderColor="{Binding OutlineColor}"
                            BorderWidth="1.5"
                            HasShadow="True"
                            HeightRequest="20"
                            VerticalOptions="Center"
                            WidthRequest="20">
                            <bit:BitFrame.Triggers>
                                <DataTrigger
                                    Binding="{Binding Shape}"
                                    TargetType="Frame"
                                    Value="Circle">
                                    <Setter Property="CornerRadius" Value="10" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding Shape}"
                                    TargetType="Frame"
                                    Value="Rectangle">
                                    <Setter Property="CornerRadius" Value="2" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding Shape}"
                                    TargetType="Frame"
                                    Value="Native">
                                    <Setter Property="CornerRadius" Value="{OnPlatform Default=2, iOS=10}" />
                                </DataTrigger>
                            </bit:BitFrame.Triggers>
                            <bit:BitFrame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding CheckTappedCommand}" CommandParameter="{Binding}" />
                            </bit:BitFrame.GestureRecognizers>
                            <Label
                                HorizontalOptions="Center"
                                Text="✓"
                                TextColor="{Binding CheckColor}"
                                VerticalOptions="Center" />
                        </bit:BitFrame>
                        <ContentView Grid.Column="1">
                            <ContentView.Content>
                                <Binding Mode="OneWay" Path="Content">
                                    <Binding.TargetNullValue>
                                        <Label
                                            Text="{Binding Text}"
                                            TextColor="{Binding TextColor}"
                                            VerticalOptions="Center" />
                                    </Binding.TargetNullValue>
                                </Binding>
                            </ContentView.Content>
                        </ContentView>
                    </Grid>
                </ControlTemplate>
            </Setter>

        </Style>
    </ContentPage.Resources>

    <StackLayout Padding="10">

        <Label
            FontSize="Micro"
            Text="Different Shape Whitch are supported"
            TextColor="Gray" />

        <StackLayout Orientation="Horizontal">

            <bit:BitCheckbox
                IsChecked="False"
                Shape="Native"
                Text="Native checkbox" />

            <bit:BitCheckbox
                IsChecked="False"
                Shape="Circle"
                Text="Circle checkbox" />

            <bit:BitCheckbox
                IsChecked="False"
                Shape="Rectangle"
                Text="Rectangle checkbox" />

        </StackLayout>

        <BoxView
            BackgroundColor="Gray"
            HeightRequest="1"
            WidthRequest="50" />

        <Label
            FontSize="Micro"
            Text="Disabled check box with check color gray instead of purple"
            TextColor="Gray" />

        <bit:BitCheckbox
            CheckColor="Purple"
            IsEnabled="False"
            Text="Disabled checkbox" />

        <BoxView
            BackgroundColor="Gray"
            HeightRequest="1"
            WidthRequest="50" />

        <Label
            FontSize="Micro"
            Text="custom label for check box. You can also put any custom control here!"
            TextColor="Gray" />

        <bit:BitCheckbox
            CheckColor="Green"
            FillColor="GreenYellow"
            OutlineColor="Green">
            <Label FontAttributes="Bold" Text="custom label" />
        </bit:BitCheckbox>

        <BoxView
            BackgroundColor="Gray"
            HeightRequest="1"
            WidthRequest="50" />

        <Label
            FontSize="Micro"
            Text="Fully customized checkbox"
            TextColor="Gray" />

        <bit:BitCheckbox Style="{StaticResource ExtendedCheckboxUI}" Text="customized checkbox" />

        <BoxView
            BackgroundColor="Gray"
            HeightRequest="1"
            WidthRequest="50" />

        <Label
            FontSize="Micro"
            Text="IsChecked is binding to viewModel"
            TextColor="Gray" />

        <bit:BitCheckbox IsChecked="{Binding IsChecked}" Text="checkbox" />

        <bit:BitCheckbox
            IsChecked="{Binding IsChecked}"
            IsCheckedChangedCommand="{Binding IsCheckedChanged}"
            Text="Test command" />

        <bit:BitCheckbox
            IsChecked="{Binding IsChecked}"
            IsCheckedChangedCommand="{Binding IsCheckedChanged}"
            Text="Test command 2">
            <bit:BitCheckbox.IsCheckedChangedCommandParameter>
                <x:Boolean>False</x:Boolean>
            </bit:BitCheckbox.IsCheckedChangedCommandParameter>
        </bit:BitCheckbox>

    </StackLayout>
</ContentPage>
