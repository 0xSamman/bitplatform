<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="Bit.CSharpClient.Controls.Samples.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Don't use xmlns:bit="https://bit-framework.com" in App.xaml. Using that in other xaml files is fine. -->
    <!-- Don't forget to call BitCSharpClientControls.XamlInit(); in your shared/.net-standard project. -->
    <Application.Resources>

        <ResourceDictionary>
            <OnPlatform x:Key="Persian-Solar-Calendar-FontFamily" x:TypeArguments="x:String">
                <On Platform="iOS" Value="Vazir FD-WOL" />
                <On Platform="UWP" Value="Assets/Vazir-Light-FD-WOL.ttf#Vazir FD-WOL" />
                <On Platform="Android" Value="Vazir-Light-FD-WOL.ttf#Vazir FD-WOL" />
            </OnPlatform>
        </ResourceDictionary>

    </Application.Resources>

</Application>
