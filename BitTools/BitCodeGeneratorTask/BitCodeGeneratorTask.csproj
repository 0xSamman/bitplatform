<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net461</TargetFramework>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <IsTool>true</IsTool>
    <AssemblyVersion>0.0.0.1</AssemblyVersion>
    <FileVersion>0.0.0.1</FileVersion>
    <Version>0.0.1</Version>
    <!--<VersionPrefix>2.0.0</VersionPrefix>
    <VersionSuffix>build$([System.DateTime]::Now.ToString('yyyyMMdd-HHmmss'))</VersionSuffix>-->
    <Authors>Bit Foundation</Authors>
    <Product>Bit Framework</Product>
    <Company>Bit Foundation</Company>
    <Title>BitCodeGeneratorTask</Title>
    <Description>BitCodeGeneratorTask</Description>
    <Copyright>Copyright © Bit Foundation 2019</Copyright>
    <PackageLicenseUrl>https://github.com/bit-foundation/bit-framework/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/bit-foundation/bit-framework</PackageProjectUrl>
    <PackageIconUrl>https://avatars.githubusercontent.com/u/22663390</PackageIconUrl>
    <RepositoryUrl>https://github.com/bit-foundation/bit-framework</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>https://github.com/bit-foundation/bit-framework/releases</PackageReleaseNotes>
    <PackageTags>Bit Code-Generator Source-Generator MsBuild</PackageTags>
    <NoPackageAnalysis>true</NoPackageAnalysis>
    <BuildOutputTargetFolder>tasks</BuildOutputTargetFolder>
    <GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' ">true</GeneratePackageOnBuild>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="build\*" PackagePath="build\" />
    <Content Include="buildMultiTargeting\*" PackagePath="buildMultiTargeting\" />
    <None Include="$(OutputPath)\BitCodeGenerator.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\BitTools.Core.VSExtensionBuildVersion.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\Microsoft.CodeAnalysis.Workspaces.Desktop.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\Microsoft.CodeAnalysis.Workspaces.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\Microsoft.CodeAnalysis.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\System.Collections.Immutable.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\Microsoft.CodeAnalysis.CSharp.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\Microsoft.CodeAnalysis.CSharp.Workspaces.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\System.Composition.TypedParts.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\System.Composition.Hosting.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\System.Composition.Runtime.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\System.Composition.AttributedModel.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\System.Reflection.Metadata.dll" Pack="true" PackagePath="tasks" Visible="false" />
    <None Include="$(OutputPath)\Newtonsoft.Json.dll" Pack="true" PackagePath="tasks" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="14.3.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.Build" Version="14.3.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.CodeAnalysis" Version="1.2.2" PrivateAssets="All" />
    <ProjectReference Include="..\BitCodeGenerator\BitCodeGenerator.csproj" PrivateAssets="All" />
  </ItemGroup>

</Project>