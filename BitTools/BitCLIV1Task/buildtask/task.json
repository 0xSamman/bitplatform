{
    "$schema": "https://raw.githubusercontent.com/Microsoft/vso-agent-tasks/9b41d803a/tasks.schema.json",
    "id": "12D2573B-8093-49BD-A19B-F1331D48519C",
    "name": "BitCLIV1Task",
    "friendlyName": "Bit CLI V1 Task",
    "description": "Provides services to validate,generate,clean codes...",
    "helpMarkDown": "https://docs.bit-framework.com",
    "category": "Utility",
    "author": "BitFoundation",
    "version": {
        "Major": 0,
        "Minor": 0,
        "Patch": 1
    },
    "instanceNameFormat": "BitCLIV1 -p $(solutionPath) -a $(action)",
    "inputs": [
        {
            "name": "solutionPath",
            "type": "filePath",
            "label": "MyApp.sln",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Your solution path"
        },
        {
            "name": "action",
            "type": "string",
            "label": "Action",
            "defaultValue": "Generate",
            "required": false,
            "helpMarkDown": "Generate | Validate | Clean"
        }
    ],
    "execution": {
        "Bash": {
            "target": "bin/BitCLIV1.exe"
        }
    }
}