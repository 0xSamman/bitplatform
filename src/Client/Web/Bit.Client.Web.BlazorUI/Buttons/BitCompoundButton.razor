@inherits BitComponentBase
<button class="bit-compound-button @(VisualClass) @(EnabledClass)" @onclick="HandleOnClick">
    <span class="flexContainer">
        <span class="bit-main">
            <span class="textContainer">
                <span class="primary-text">
                    @Text
                </span>
                <span class="secondary-text">
                    @SecondaryText
                </span>
            </span>
        </span>
        @if (ChildContent is not null)
        {
            <span class="bit-child">
                @ChildContent
            </span>
        }
    </span>
</button>