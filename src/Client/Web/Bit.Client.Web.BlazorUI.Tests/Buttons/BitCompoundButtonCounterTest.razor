<BitCompoundButton OnClick="IncrementCount" IsEnabled="BitCompoundButtonIsEnabled" Text="Test" SecondaryText="Second Text">
    <label>Other test label</label>
</BitCompoundButton>


@code {
    [Parameter] public bool BitCompoundButtonIsEnabled { get; set; }

    public int CurrentCount { get; set; }

    public void IncrementCount(MouseEventArgs e)
    {
        CurrentCount++;
    }

}
