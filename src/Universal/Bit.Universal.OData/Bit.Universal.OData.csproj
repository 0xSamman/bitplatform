<Project Sdk="MSBuild.Sdk.Extras/2.1.2">

  <Import Project="../../Bit.Build.props" />

  <PropertyGroup>
    <TargetFrameworks>net5.0;monoandroid9.0;monoandroid10.0;Xamarin.iOS10;uap10.0.17763;netstandard2.0;netstandard2.1;</TargetFrameworks>
    <PackageTags>$(PackageTags) OData</PackageTags>
    <RootNamespace>Bit.OData</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Simple.OData.V4.Client" Version="5.12.0" />
    <PackageReference Include="Microsoft.OData.Core" Version="7.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Bit.Universal.Http\Bit.Universal.Http.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>