<?xml version="1.0" encoding="utf-8" ?>
<bit:BitApplication
    xmlns:bit="clr-namespace:Bit;assembly=Bit.CSharpClient.Prism"
    xmlns:bitView="clr-namespace:Bit.View;assembly=Bit.CSharpClient.Prism"
    x:Class="Bit.CSharpClientSample.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Don't use xmlns:bit="https://bitframework.com" in App.xaml. Using that in other xaml files is fine. -->
    <!-- Don't forget to call BitCSharpClientControls.XamlInit(); in your shared/.net-standard project. -->
    <bit:BitApplication.Resources>
        <ResourceDictionary>
            <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
                <Setter Property="bitView:Screen.OrientationAndScreenSizeAware" Value="True" />
            </Style>
        </ResourceDictionary>
    </bit:BitApplication.Resources>
</bit:BitApplication>
