<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bit.CSharpClientSample.MainView">
    <StackLayout>
        <Button Text="CheckIsLoggedIn" Command="{Binding CheckIsLoggedIn}" />
        <Entry Text="{Binding UserName}" />
        <Entry Text="{Binding Password}}" />
        <Button Text="LoginUsingResourceOwnerFlow" Command="{Binding LoginUsingResourceOwnerFlow}" />
        <Button Text="LoginUsingImplicitFlow" Command="{Binding LoginUsingImplicitFlow}" />
        <Button Text="LoginUsingGooglePlus" Command="{Binding LoginUsingGooglePlus}" />
        <Button Text="SendHttpRequest" Command="{Binding SendHttpRequest}" />
        <Button Text="SendODataRequest" Command="{Binding SendODataRequest}" />
        <Button Text="Logout" Command="{Binding Logout}" />
    </StackLayout>
</ContentPage>