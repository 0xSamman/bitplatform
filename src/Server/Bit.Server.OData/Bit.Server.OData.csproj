<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../Bit.Build.props" />

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <PackageTags>$(PackageTags) Web API OData Rest Microsoft AspNet WebApi AspNetWebApi</PackageTags>
    <RootNamespace>Bit.OData</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.OData" Version="7.4.1" />
    <PackageReference Include="Bit.Swashbuckle.OData" Version="4.0.7" />
    <PackageReference Include="LambdaSqlBuilder" Version="0.9.0" />
    <PackageReference Include="Microsoft.OData.Core" Version="7.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Bit.Server.Data\Bit.Server.Data.csproj" />
    <ProjectReference Include="..\Bit.Server.WebApi\Bit.Server.WebApi.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>