<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../Server.Build.props" />

  <PropertyGroup>
    <TargetFrameworks>net461;netcoreapp3.1</TargetFrameworks>
    <PackageTags>$(PackageTags) Hangfire AspNet OWIN SqlServer Long-Running Background Fire-And-Forget Delayed Recurring Tasks Scheduler Threading Queues Jobs</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="Hangfire-Database-Script.sql" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire.AspNetCore" Version="1.7.10" Condition=" '$(TargetFramework)' == 'netcoreapp3.1' " />
    <PackageReference Include="Hangfire.Core" Version="1.7.10" />
    <PackageReference Include="Hangfire.Autofac" Version="2.3.1" />
    <PackageReference Include="Hangfire.MemoryStorage" Version="1.7.0" />
    <PackageReference Include="HangFire.Redis.StackExchange" Version="1.8.1" />
    <PackageReference Include="Hangfire.SqlServer" Version="1.7.10" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Condition=" '$(TargetFramework)' == 'netcoreapp3.1' " Include="..\Bit.OwinCore\Bit.OwinCore.csproj" />
    <ProjectReference Include="..\Bit.Owin\Bit.Owin.csproj" />
  </ItemGroup>

</Project>