<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <RuntimeIdentifier>win7-x86</RuntimeIdentifier>
    <TypeScriptToolsVersion>3.8</TypeScriptToolsVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="BitChangeSetManager.DataAccess.BitChangeSetManagerDbContext.edmx" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="IdentityServerCertificate.pfx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Bit.Server.Data.EntityFramework" Version="5.0.0" />
    <PackageReference Include="Bit.Server.Hangfire" Version="5.0.0" />
    <PackageReference Include="Bit.Server.IdentityServer" Version="5.0.0" />
    <PackageReference Include="Bit.Server.OData" Version="5.0.0" />
    <PackageReference Include="Bit.Server.Owin" Version="5.0.0" />
    <PackageReference Include="Bit.Server.Signalr" Version="5.0.0" />
    <PackageReference Include="Bit.Tooling.CodeAnalyzer" Version="5.0.0" />
    <PackageReference Include="Bit.Tooling.CodeGenerator.Task" Version="5.0.0" />
    <PackageReference Include="Dapper" Version="2.0.35" />
    <PackageReference Include="SourceLink.Copy.PdbFiles" Version="2.8.3" PrivateAssets="All" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Update="App_Data\templates.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  
  <ItemGroup>
    <None Update="app.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Web.Debug.config">
      <DependentUpon>Web.config</DependentUpon>
    </None>
    <None Update="Web.Release.config">
      <DependentUpon>Web.config</DependentUpon>
    </None>
  </ItemGroup>

</Project>
