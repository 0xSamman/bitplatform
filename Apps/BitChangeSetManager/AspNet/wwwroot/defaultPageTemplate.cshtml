@using Bit.Owin.Contracts
@using Bit.Owin.Models
@using Bit.Owin.Implementations
@inherits RazorViewTemplate

@{
    DefaultPageModel model = Resolve<IDefaultPageModelProvider>().GetDefaultPageModel();
}

<!DOCTYPE html>
<html>

<head>
    <title>@(model.AppTitle)</title>
    <link rel="shortcut icon" href="Files/V@(model.AppVersion)/favicon.ico" type="image/x-icon">
    <link rel="icon" href="Files/V@(model.AppVersion)/favicon.ico" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <base href="@(model.BaseHref)" />
    <script type="text/javascript">
        clientAppProfile = {
            theme: "@(model.Theme)",
            culture: "@(model.Culture)",
            version: "@(model.AppVersion)",
            isDebugMode: @(model.DebugMode.ToString().ToLowerInvariant()),
            appTitle: "@(model.AppTitle)",
            appName: "@(model.AppName)",
            desiredTimeZone: "@(model.DesiredTimeZoneValue)",
            environmentConfigs: @(model.EnvironmentConfigsJSON)
        };
    </script>
    <script src="Files/V@(model.AppVersion)/node_modules/@("@")bit/bit-framework/bit.core.js"></script>
    <script src="Files/V@(model.AppVersion)/node_modules/@("@")bit/bit-framework/bit.ng1.js"></script>
    <script src="Files/V@(model.AppVersion)/bitChangeSetManager.js"></script>
    <script type="text/javascript">
        Bit.DependencyManager.getCurrent().init();
    </script>
</head>

<body class="@(model.Culture == "FaIr" ? "k-rtl" : "k-ltr")">
    <app></app>
</body>

</html>